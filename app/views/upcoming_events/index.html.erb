    <style>
      @media (min-width: 768px) {
        .upcoming-bg-image {
          width: 100%;
          object-fit: cover;
        }
      }

      @media (max-width: 768px) {
        .upcoming-bg-image {
          width: 100%;
          object-fit: cover;
        }
      }




    </style>


  <div class="container-fluid">
    <div class="row">
      <%= image_tag "upcoming-bg-first-image.png", alt: "Company Logo", class: "img-fluid upcoming-bg-image p-0", loading: "lazy" %>
    </div>

    <div class="container">
      <div class="row">

        <!-- Upcoming Events -->
        <div class="col-md-8 mx-auto">
          <h4 class="text-center text-white caudex-bold m-0 py-5">UPCOMING EVENTS</h4>

          <% @upcoming_events.each do |upcoming_event| %>
            <div class="event-card mb-4 d-flex flex-column flex-md-row">
              
              <!-- Date + Description on left -->
              <div class="flex-grow-1 text-start text-white">
                <!-- Date on top -->
                <div class="event-date text-nowrap mb-1">
                  <strong><%= upcoming_event.date.strftime("%-d %B %Y") %></strong>
                </div>

                <!-- Description below date -->
                <div class="event-details" style="font-size: 18px;">
                  <%= upcoming_event.title.to_s.titleize %>,
                  <%= upcoming_event.ensemble.to_s.titleize %>,
                  <%= upcoming_event.venue.to_s.titleize %>,
                  <%= upcoming_event.city.to_s.titleize %>
                </div>

              </div>

              <!-- Tickets Button -->
              <% if upcoming_event.link.present? %>
                <% doc = Nokogiri::HTML.fragment(upcoming_event.link.body.to_s) %>
                <% anchor = doc.at_css("a") %>
                <% if anchor && anchor['href'].present? %>
                  <div>
                    <a href="<%= anchor['href'] %>" class="btn btn-dark" target="_blank" rel="noopener noreferrer">
                      <%= anchor.text.presence || "Tickets" %>
                    </a>
                  </div>
                <% end %>
              <% end %>

            </div>
          <% end %>

        </div>

        <!-- Past Events -->
        <div class="col-md-8 mx-auto">
          <h4 class="text-center text-white caudex-bold m-0 pt-5 pb-5">PAST EVENTS</h4>

          <% @past_events.each do |past_event| %>
          <div class="event-card mb-4 d-flex flex-column flex-md-row">

              <!-- Date + Description on left -->
            <div class="flex-grow-1 text-start text-white">
                <!-- Date -->
                <div class="event-date text-nowrap mb-1">
                  <strong><%= past_event.date.strftime("%-d %B %Y") %></strong>
                </div>

                <!-- Details -->
                <div class="event-details" style="font-size: 18px;">
                  <%= past_event.title.to_s.titleize %>,
                  <%= past_event.ensemble.to_s.titleize %>,
                  <%= past_event.venue.to_s.titleize %>,
                  <%= past_event.city.to_s.titleize %>
                </div>
              </div>

              <!-- Link Button if present -->
              <% if past_event.link.present? %>
                <% doc = Nokogiri::HTML.fragment(past_event.link.body.to_s) %>
                <% anchor = doc.at_css("a") %>
                <% if anchor && anchor['href'].present? %>
                  <div>
                    <a href="<%= anchor['href'] %>" class="btn btn-dark" target="_blank" rel="noopener noreferrer">
                      <%= anchor.text.presence || "View" %>
                    </a>
                  </div>
                <% end %>
              <% end %>

            </div>
          <% end %>
        </div>


      </div>
    </div>
  </div>
