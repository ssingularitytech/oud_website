<style>
  .video-card {
    aspect-ratio: 1/0.7;
    object-fit: cover;
  }
</style>

<div class="container px-md-5">
  <h4 class="text-center text-white pt-md-5 pt-3 caudex-bold">PHOTOS</h4>
  <div class="row row-cols-xl-3 row-cols-md-2 row-cols-1 pt-md-5 pt-3">
    <% @photos.each do |photo| %>
      <div class="col mt-4 text-center">
        <% if photo.photo.attached? %>
          <img src="<%= url_for(photo.photo) %>" class="img-fluid news-image video-card rounded" loading="lazy">
        <% end %>
      </div>
    <% end %>
  </div>
</div>
