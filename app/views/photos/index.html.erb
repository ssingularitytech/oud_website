<style>
  .photo-image {
    aspect-ratio: 1/1;
    object-fit: cover;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
    border-top-left-radius: 0.5rem;
    border-top-right-radius: 0.5rem;
  }

  .photo-image.loaded {
    opacity: 1;
  }

  .photo-container:hover {
    transform: translateY(-5px);
    transition: transform 0.3s ease;
  }

  .photo-item {
    display: none;
  }
</style>

<div class="container px-md-5">
  <div class="py-md-5 py-4">
    <h4 class="text-center text-white caudex-bold p-0 m-0">PHOTOS</h4>
  </div>

  <div class="row row-cols-xl-3 row-cols-md-2 row-cols-1" id="photo-gallery">
    <% @photos.each_with_index do |photo, index| %>
      <div class="col mt-4 photo-item photo-container">
        <div class="card h-100 bg-dark text-white">
          <% if photo.photo.attached? %>
            <img loading="lazy" data-src="<%= url_for(photo.photo) %>" class="card-img-top photo-image lazy-seq-img" alt="photo" />
          <% end %>
          <!-- <div class="card-body text-center">
            <h5 class="card-title caudex-bold"><%= photo.name %></h5>
          </div> -->
        </div>
      </div>
    <% end %>
  </div>

  <% if @photos.size > 6 %>
    <div class="text-center my-4">
        <button id="show-more-photos-btn" class="caudex-bold text-black py-2 px-4 rounded fs-5 back-button text-white" style="border: 2px solid blue; border-radius: 12px; color: white;">Show More</button>
        <button id="show-less-photos-btn" class="caudex-bold text-black py-2 px-4 rounded fs-5 back-button text-white" style="border: 2px solid blue; border-radius: 12px; color: white;">Show Less</button>
    </div>
  <% end %>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const images = Array.from(document.querySelectorAll('.lazy-seq-img'));
    const photoItems = Array.from(document.querySelectorAll('.photo-item'));
    const showMoreBtn = document.getElementById('show-more-photos-btn');
    const showLessBtn = document.getElementById('show-less-photos-btn');

    let visibleCount = 6;

    // Sequential lazy loading with fade-in
    function loadNextImage(index) {
      if (index >= images.length) return;

      const img = images[index];
      const src = img.getAttribute('data-src');

      if (src) {
        const preloadImg = new Image();
        preloadImg.src = src;

        preloadImg.onload = () => {
          img.src = src;
          img.classList.add('loaded');
          setTimeout(() => loadNextImage(index + 1), 100);
        };

        preloadImg.onerror = () => {
          loadNextImage(index + 1);
        };
      } else {
        loadNextImage(index + 1);
      }
    }

    // Show initial images
    function updateVisiblePhotos() {
      photoItems.forEach((item, index) => {
        if (index < visibleCount) {
          item.style.display = 'block';
        } else {
          item.style.display = 'none';
        }
      });

      if (visibleCount >= photoItems.length) {
        showMoreBtn.classList.add('d-none');
        showLessBtn.classList.remove('d-none');
      } else {
        showMoreBtn.classList.remove('d-none');
        showLessBtn.classList.add('d-none');
      }
    }

    updateVisiblePhotos();
    loadNextImage(0); // Lazy load first visible images

    if (showMoreBtn) {
      showMoreBtn.addEventListener('click', function () {
        visibleCount += 3;
        updateVisiblePhotos();
        loadNextImage(0);
      });
    }

    if (showLessBtn) {
      showLessBtn.addEventListener('click', function () {
        visibleCount = 6;
        updateVisiblePhotos();
        window.scrollTo({
          top: document.getElementById("photo-gallery").offsetTop - 100,
          behavior: "smooth"
        });
      });
    }
  });
</script>
