    <style>
      .contact-bg-image{
        width: 70%;
        border-radius: 15px;
      }
    </style>

    <div class="container">
    <h2 class="text-center text-white pt-md-5 pt-3 caudex-bold">CONTACT</h2>
    <div class="row mt-5" style="border: 2px solid grey;">
        <div class="col-md-6">
            <%= image_tag "biography/biography-first-image.jpg", alt: "Company Logo", class: "img-fluid contact-bg-image" %>
        </div>
        <div class="col-md-6 d-flex flex-column justify-content-center">
          <form action="post">
            <div class="mb-3">
                <input type="text" class="form-control py-2" placeholder="Name" required>
            </div>
            <div class="mb-3">
                <input type="email" class="form-control py-2" placeholder="Email" required>
            </div>
            <div class="mb-3">
                <textarea class="form-control" rows="5" placeholder="Message" required></textarea>
            </div>

            <div class="row mt-5">
              <a href="/news" style="text-decoration: none;">
                <button class="comman-bg-color py-2 px-4 justify-content-center align-item-center" style="border: 2px solid #08f; border-radius: 12px; color: white;">
                    <h5 class="mt-1" style="font-size: 20px;">Send message</h5>
                </button>
              </a>
            </div>
            
            <div class="row text-white d-flex align-items-center mt-5">
                <div class="col-md-8">
                  <input type="text" class="form-control py-4" placeholder="Your email" required>
                </div>
                <div class="col-md-4 text-end">
                    <button class="py-4 px-5 rounded border-0">Subscribe</button>
                </div>
            </div>

        </form>
        </div>
    </div>
    </div>

