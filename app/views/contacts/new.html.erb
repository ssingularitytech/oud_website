<style>
      @media (min-width: 1024px) {
        .contact-bg-image{
        width: 70%;
        border-radius: 15px;
      }
    }

      @media (min-width: 1024px) {
      .contact-corder{
        border: 2px solid grey;
        border-radius: 12px;
      }
      }
    </style>

    <div class="container">
    <h4 class="text-center text-white pt-md-5 pt-3 caudex-bold">Get in touch!</h4>
    <div class="row mt-5 contact-corder py-4 px-3">
        <div class="col-md-6">
            <%= image_tag "biography/biography-first-image.jpg", alt: "Company Logo", class: "img-fluid contact-bg-image" %>
        </div>
        <div class="col-md-6 d-flex flex-column justify-content-center mt-md-0 mt-4">
          <%= form_with(model: @contact, local: true) do |f| %>
          
            <div class="mb-3">
              <%= f.text_field :name, class: "form-control py-2", placeholder: "Name", required: true %>
            </div>
    
            <div class="mb-3">
              <%= f.email_field :email, class: "form-control py-2", placeholder: "Email", required: true %>
            </div>
    
            <div class="mb-3">
              <%= f.text_area :message, class: "form-control py-2", placeholder: "Message", required: true %>
            </div>
    
            <div class="row mt-5 text-md-start text-center">
              <div class="justify-content-center align-item-center">
                <%= f.submit "Send message", class: "comman-bg-color py-2 px-4", 
                 style: "border: 2px solid grey; border-radius: 12px; color: white; font-size: 20px;" %>
              </div>
            </div>
          
          <% end %>
          
          <%= form_with(scope: :subscribe, url: subscribes_path, local: true) do |f| %>
            <div class="row text-white d-flex align-items-center mt-4 g-3">
              <h5 class="text-md-start text-center">Join our newsletter</h5>
              
              <div class="col-12 col-lg-8">
                <%= f.email_field :email, class: "form-control py-3 fs-5", placeholder: "Your email", required: true %>
              </div>

              <div class="col-12 col-lg-4 text-md-end text-center mt-2 mt-lg-0">
                <%= f.submit "Subscribe", class: "py-3 px-4 w-100 w-md-auto text-white fs-5 comman-bg-color", style: "border: 2px solid grey; border-radius: 12px; color: white; font-size: 20px;" %>
              </div>
            </div>
          <% end %>
        </div>
    </div>
    </div>




