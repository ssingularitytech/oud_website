    <style>
        
        @media (min-width: 768px) {
            .show-news-image {
            height: 30rem;
            width: 100%;
            object-fit: contain;
            }
            }

            @media (max-width: 768px) {
            .show-news-image {
            height: 21rem;
            width: 100%;
            object-fit: contain;
            }
            }
    </style>

    <div class="container">
        <h4 class="text-center text-white pt-md-5 pt-3 caudex-bold">NEWS</h4>
        <div class="row text-white px-md-5 px-2">
            
                    <div class="text-center mt-2 gap-2 d-md-flex justify-content-center">
                        <h5><%= @news.news_date.strftime("%d %b %Y") %></h5>
                        <h5><%= @news.news_name %></h5>
                    </div>
            
                    <% if @news.news_image.attached? %>
                        <img src="<%= url_for(@news.news_image) %>" class="img-fluid show-news-image mt-2">
                    <% end %>
                    <div class="description mt-md-4 mt-2">
                        <p><%= @news.news_description %></p>
                        
                        <% if @news.news_link.present? %>
                        <% @news.news_link.split(' ').each do |link| %>
                          <p>
                            <a href="<%= link.strip %>" target="_blank" rel="noopener">
                              <%= link.strip %>
                            </a>
                          </p>
                        <% end %>
                      <% end %>
                    </div>
                    <div class="">
                      <a href="/news" style="text-decoration: none;">
                        <button class="back-button mt-3" style="border: 2px solid #08f; border-radius: 12px; color: white;">
                          <div class="d-flex justify-content-center align-items-center gap-2 caudex-bold py-2 px-4">
                            <i style="font-size: 20px;" class="bi bi-chevron-left"></i>
                            <span style="font-size: 20px;">Go Back</span>
                          </div>
                        </button>
                      </a>
                    </div>
                    
        </div>
    </div>


