<style>

    .news-image {
        aspect-ratio: 3/2.8;
        width: 100%;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }
    

    .news-body-text {
        /* background-color: #2f2c2c; */
        color: white;
        border-bottom-left-radius: 12px;
        border-bottom-right-radius: 12px;
        min-height: 212px;
        display: flex;
        flex-direction: column;
    }

    .view-details-btn {
        margin-top: auto; 
    }

    .news-body-text {
        color: white;
        text-shadow: 0 1px 0 #000;
        --border-angle: 0turn;
        --main-bg: conic-gradient(from var(--border-angle), #213, #112 5%, #112 60%, #213 95%);
        background: var(--main-bg);
        background-position: center center;
        animation: bg-spin 3s linear infinite;
        border: 3px solid #08f;
      }
</style>

<div class="container">
    <h2 class="text-center text-white pt-md-5 pt-3 caudex-bold">NEWS</h2>
    <div class="row row-cols-xl-3 row-cols-md-2 row-cols-1 pt-md-5 pt-3">
        <% @news.each do |news| %>
        <div class="col mt-4 d-flex justify-content-center">
                <div class="news-card" style="width: 95%;">
                <% if news.news_image.attached? %>
                    <img src="<%= url_for(news.news_image) %>" class="img-fluid news-image">
                <% end %>
                <div class="news-body-text caudex-normal py-3 px-3">
                    <h5><%= news.news_date.strftime("%d %b %Y") %></h5>
                    <h5><%= news.news_name.split[0...4].join(' ') %>...</h5>
                    <p style="font-size: 17px;"><%= news.news_description.to_plain_text.split[0...10].join(' ') %>...</p>
                    <a href="<%= news_path(news) %>" class="text-white view-details-btn">Know More</a>
                </div>
            </div>
           </div>
        <% end %>
    </div>
</div>


