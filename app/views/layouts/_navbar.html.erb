<script>
    document.addEventListener("DOMContentLoaded", function () {
        const toggleSidebar = document.getElementById("toggleSidebar"); // Hamburger button
        const closeSidebarIcon = document.getElementById("closeSidebarIcon"); // Close "X" icon
        const closeSidebarBtn = document.getElementById("closeSidebarBtn"); // Red Close Button
        const sidebar = document.getElementById("sidebar");

        // Toggle sidebar and buttons
        function toggleMenu() {
            const isActive = sidebar.classList.toggle("active");
            toggleSidebar.style.display = isActive ? "none" : "block"; // Hide hamburger when open
            closeSidebarIcon.style.display = isActive ? "block" : "none";  // Show close icon
            closeSidebarBtn.style.display = isActive ? "block" : "none";  // Show red close button
        }

        // Open sidebar
        toggleSidebar.addEventListener("click", toggleMenu);

        // Close sidebar (both close icon and button)
        closeSidebarIcon.addEventListener("click", toggleMenu);
        closeSidebarBtn.addEventListener("click", toggleMenu);
    });
</script>
