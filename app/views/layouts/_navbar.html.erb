    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const toggleSidebar = document.getElementById("toggleSidebar"); 
            const closeSidebarIcon = document.getElementById("closeSidebarIcon");
            const closeSidebarBtn = document.getElementById("closeSidebarBtn");
            const sidebar = document.getElementById("sidebar");

            // Toggle sidebar and buttons
            function toggleMenu() {
                const isActive = sidebar.classList.toggle("active");
                toggleSidebar.style.display = isActive ? "none" : "block"; 
                closeSidebarIcon.style.display = isActive ? "block" : "none";  
                closeSidebarBtn.style.display = isActive ? "block" : "none";
            }

            // Open sidebar
            toggleSidebar.addEventListener("click", toggleMenu);

            // Close sidebar (both close icon and button)
            closeSidebarIcon.addEventListener("click", toggleMenu);
            closeSidebarBtn.addEventListener("click", toggleMenu);
        });
    </script>
