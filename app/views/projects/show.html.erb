  <style>
    @media (min-width: 768px) {
      .media-wrapper {
        height: 25rem;
      }

      .show-project-image,
      .youtube-frame {
        width: 100%;
        height: 100%;
        object-fit: fill;
        border: 2px solid grey;
        border-radius: 12px;
      }
    }

    @media (max-width: 767px) {
      .media-wrapper {
        height: 15rem;
      }

      .show-project-image,
      .youtube-frame {
        width: 100%;
        height: 100%;
        object-fit: fill;
        border: 2px solid grey;
        border-radius: 12px;
      }
    }
  </style>

  <div class="container">
    <div class="text-center justify-content-center text-white caudex-bold text-white py-md-5 py-4">
      <h4><%= @project.name %></h4>
    </div>
  <div class="row text-white px-2">
    <% @project.project_details.each do |detail| %>
      <!-- Left Column: Image -->
      <div class="col-lg-6">
        <% if detail.image.attached? %>
          <div class="media-wrapper mb-3">
            <img src="<%= url_for(detail.image) %>" class="img-fluid show-project-image">
          </div>
        <% end %>
      </div>

      <!-- Right Column: YouTube -->
      <div class="col-lg-6">
        <% if detail.youtube_url.present? %>
          <% youtube_id = detail.youtube_url[/(?:youtu\.be\/|youtube\.com\/(?:watch\?v=|embed\/))([\w-]+)/, 1] %>
          <% if youtube_id.present? %>
            <div class="media-wrapper mb-3">
              <iframe class="youtube-frame"
                src="https://www.youtube.com/embed/<%= youtube_id %>"
                title="YouTube video player"
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen>
              </iframe>
            </div>
          <% end %>
        <% end %>
      </div>

      <!-- Description -->
      <div class="description py-2">
        <p><%= detail.description %></p>
      </div>
    <% end %>

    <div class="">
      <a href="/projects" style="text-decoration: none;">
        <button class="back-button mt-3" style="border: 2px solid blue; border-radius: 12px; color: white;">
          <div class="d-flex justify-content-center align-items-center gap-2 caudex-bold py-2 px-4">
            <i style="font-size: 20px;" class="bi bi-chevron-left"></i>
            <span style="font-size: 20px;">Go Back</span>
          </div>
        </button>
      </a>
    </div>
  </div>
  </div>
