
  <style>

      @media (min-width: 768px) {
      .project-image {
      height: 30rem;
      width: 100%;
      object-fit: contain;
  }
  }
  @media (max-width: 768px) {
        .project-image {
          height: 15rem;
          width: 100%;
          object-fit: contain;
      }
  }
  </style>

  <div class="container">
    <h2 class="text-center text-white pt-md-5 pt-3 caudex-bold">PROJECT</h2>
    <div class="row text-white px-md-5 px-2">
        <div class="text-center mt-2 gap-2 d-flex justify-content-center">
            <p><%= @project.name %></p>
        </div>
        
          <% @project.project_details.each do |detail| %>
            <% if detail.image.attached? %>
                <img src="<%= url_for(detail.image) %>" class="img-fluid project-image">
            <% end %>
           <div class="project-description mt-md-5 mt-3">
                <p><%= detail.description %></p>
            </div>
            <% end %>
            <div class="project-btn">
              <%= link_to "Go Back", projects_path, class: "btn btn-secondary px-5 rounded" %>
            </div>
            
      </div>
     </div>
