
 <style>

  @media (min-width: 768px) {
    .box .pressquoute-image {
      float: left;
      width: 590px;
      height: 400px;
      border-radius: 20px;
      object-fit: fill;
       }
      }

  @media (max-width: 768px) {
      .box .pressquoute-image {
      float: left;
      width: 100%;
      height: 280px;
      border-radius: 20px;
      object-fit: fill;
        }
      }


    /* progressive css */
    .progressive-image {
      filter: blur(20px);
      transition: filter 0.5s ease;
    }

    .progressive-image.loaded {
      filter: blur(0);
    }
  </style>

  <div class="container">
   

      <div class="py-md-5 py-4 text-white">
          <h4 class="text-center text-white caudex-bold p-0 m-0">PRESS QUOTES</h4>
      </div>
       
      <div class="row">
          <div class="box">

             <% @pressquoutes.each do |pressquoute| %>
                <% if pressquoute.image.present? %>
                  <%= image_tag pressquoute.image,
                    loading: "lazy", 
                    class: "img-fluid pressquoute-image progressive-image p-2", 
                    alt: "About image",
                    data: { src: url_for(pressquoute.image) } %>
                <% end %>

                <div class="text text-white px-2 pt-1">
                    <%= pressquoute.text %>
                </div>

              <% end %>
          </div>

      </div>
   
  </div>

    <script>
    document.addEventListener("DOMContentLoaded", function () {
      const images = document.querySelectorAll(".progressive-image");

      images.forEach((img) => {
        if (img.complete) {
          img.classList.add("loaded");
        } else {
          img.addEventListener("load", () => {
            img.classList.add("loaded");
          });
        }
      });
    });
  </script>










