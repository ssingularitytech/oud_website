<style>
    @media (min-width: 768px) {
      .press-image {
        width: 100%;
        height: 20rem;
        object-fit: fit;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }
    }

    @media (max-width: 768px) {
      .press-image {
        width: 100%;
        height: 17rem;
        object-fit: fit !important;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }
    }

  .press-body-text {
      background-color: #2f2c2c;
      color: white;
      border-bottom-left-radius: 12px;
      border-bottom-right-radius: 12px;
      min-height: 130px !important;
      display: flex;
      flex-direction: column;
      justify-content: center; 
      align-items: center;
      text-align: center; 
  }


</style>

<div class="container">
    <h2 class="text-center text-white pt-md-5 pt-3 caudex-bold">INTERVIEWS & ARTICLES</h2>
    <div class="row row-cols-xl-3 row-cols-md-2 row-cols-1 pt-md-5 pt-3">
      <% @press.each do |press| %>
      <div class="col mt-4 d-flex justify-content-center text-center">
        <!-- Wrap the entire card in an <a> tag -->
          <div class="news-card" style="width: 90%;">
        <a href="<%= press.link %>" class="text-decoration-none">
            <% if press.image.attached? %>
              <img src="<%= url_for(press.image) %>" class="img-fluid press-image">
            <% end %>
            <div class="press-body-text py-3 px-3">
              <h5 class="caudex-normal m-0"><%= press.date.strftime("%d %b %Y") %></h5>
              <h5 class="caudex-normal m-0"><%= press.name %></h5>
              <p class="d-none"><%= press.link %></p>
            </div>
          </a>
        </div>
      </div>
    <% end %>
    
    </div>
</div>
